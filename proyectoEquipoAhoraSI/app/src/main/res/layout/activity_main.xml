<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generador de mosaico multipágina en PDF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"/>

    <Button
        android:id="@+id/buttonSeleccionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccionar imágenes"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/imageViewPreview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Vista previa de la imagen seleccionada"
        android:scaleType="fitCenter"/>

    <CheckBox
        android:id="@+id/checkbox_mantener_proporcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mantener proporción de aspecto"
        android:checked="true"
        android:paddingTop="16dp"/>

    <Button
        android:id="@+id/buttonGenerarPDF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generar PDF"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

</LinearLayout>
